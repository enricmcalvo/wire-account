{
  "name": "wire-account",
  "license": "LicenseRef-LICENSE",
  "scripts": {
    "babel": "yarn -s babel-extract && yarn -s babel-update && yarn -s babel-compile",
    "babel-compile": "pybabel compile -f -d app/translations",
    "babel-extract": "pybabel extract -k _ -k __ -F app/translations/babel.cfg --sort-by-file --omit-header -o app/translations/account.pot app",
    "babel-init": "pybabel init -i app/translations/account.pot -d app/translations -l",
    "babel-update": "pybabel update -i app/translations/account.pot -d app/translations --no-wrap",
    "build": "yarn build:server && yarn build:front",
    "build:front": "gulp build",
    "build:server": "yarn lint:ts --fix && yarn tsc -P ./tsconfig.json",
    "crowdin": "yarn -s babel && crowdin-cli --identity=keys/crowdin.yaml upload sources && crowdin-cli --identity=keys/crowdin.yaml download && yarn -s babel && crowdin-cli --identity=keys/crowdin.yaml download",
    "translate:download": "node bin/translations_download.js && node bin/translations_normalize.js && yarn translate:extractpo",
    "translate:upload": "yarn translate:buildpot && node bin/translations_upload.js",
    "translate:buildpot": "rip json2pot \"locales/**/*.json\" -o \"./i18n/account.pot\"",
    "translate:extractpo": "rip po2json \"./i18n/*.po\" -m \"locales/**/*.json\" -o \"locales/i18n\"",
    "lint:ts": "tslint --config tslint.json --project tsconfig.json \"**/*.ts\"",
    "start": "yarn build:server && concurrently \"gulp watch\" \"yarn build:server --w\" \"nodemon ./dist/index.js\"",
    "start:prod": "node ./index.js",
    "test": "yarn build:server && yarn test:server",
    "test:server": "jasmine --config=jasmine.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-account.git"
  },
  "dependencies": {
    "@wireapp/commons": "0.9.1",
    "axios": "0.18.0",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "express-formidable": "1.2.0",
    "express-useragent": "1.0.12",
    "gulp": "3.9.1",
    "helmet": "3.13.0",
    "i18next": "12.0.0",
    "i18next-express-middleware": "1.5.0",
    "i18next-node-fs-backend": "2.1.0",
    "intl": "1.2.5",
    "jquery": "3.3.1",
    "logdown": "3.2.7",
    "moment": "2.22.2",
    "normalize.css": "8.0.0",
    "nunjucks": "3.1.3",
    "nunjucks-autoescape": "1.0.1"
  },
  "devDependencies": {
    "@types/dotenv": "4.0.3",
    "@types/express": "4.16.0",
    "@types/express-formidable": "1.0.3",
    "@types/express-useragent": "0.2.21",
    "@types/helmet": "0.0.42",
    "@types/i18next": "11.9.3",
    "@types/i18next-express-middleware": "0.0.33",
    "@types/i18next-node-fs-backend": "0.0.30",
    "@types/jasmine": "2.8.11",
    "@types/node": "10.12.0",
    "@types/nunjucks": "3.1.0",
    "coffee-script": "1.12.7",
    "concurrently": "4.0.1",
    "cross-env": "5.2.0",
    "del": "3.0.0",
    "fs-extra": "7.0.1",
    "gulp-autoprefixer": "6.0.0",
    "gulp-concat": "2.6.1",
    "gulp-cssnano": "2.1.3",
    "gulp-help": "1.6.1",
    "gulp-less": "4.0.1",
    "gulp-livereload": "4.0.0",
    "gulp-load-plugins": "1.5.0",
    "gulp-plumber": "1.2.0",
    "gulp-sequence": "1.0.0",
    "gulp-size": "3.0.0",
    "gulp-sourcemaps": "2.6.4",
    "gulp-uglify": "3.0.1",
    "gulp-util": "3.0.8",
    "gulp-zip": "4.2.0",
    "jasmine": "3.3.0",
    "less": "3.8.1",
    "nodemon": "1.18.6",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.1.3",
    "uglify-js": "3.4.9"
  },
  "private": true
}
